{
  "name": "metrics-graphics",
  "version": "3.0.0-beta2",
  "description": "A library optimized for concise, principled data graphics and layouts",
  "main": "dist/MG.js",
  "types": "dist/MG.d.ts",
  "scripts": {
    "build": "rm -rf dist && rm -rf build && mkdir dist && cp src/mg.css dist/mg.css && tsc && rollup -c rollup.config.js",
    "lint": "eslint src",
    "test": "echo \"no tests set up, will do later\"",
    "dev": "NODE_ENV=development tsc -w",
    "documentation": "yarn documentation:base && yarn documentation:components && yarn documentation:utility",
    "documentation:base": "documentation build src/js/charts/** -f md -o docs/API.md --shallow",
    "documentation:components": "documentation build src/js/components/** -f md -o docs/Components.md --shallow",
    "documentation:utility": "documentation build src/js/misc/utility.js -f md -o docs/Utility.md --shallow"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/metricsgraphics/metrics-graphics.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "metrics-graphics",
    "metricsgraphicsjs",
    "metricsgraphics",
    "metricsgraphics.js",
    "d3 charts"
  ],
  "author": "Mozilla",
  "contributors": [
    "Ali Almossawi",
    "Hamilton Ulmer",
    "William Lachance",
    "Jens Ochsenmeier"
  ],
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/metricsgraphics/metrics-graphics/issues"
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "homepage": "http://metricsgraphicsjs.org",
  "dependencies": {
    "d3-array": "^3.1.1",
    "d3-axis": "^3.0.0",
    "d3-brush": "^3.0.0",
    "d3-delaunay": "^6.0.2",
    "d3-format": "^3.1.0",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.1.0",
    "d3-time-format": "^4.1.0"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^2.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/d3-array": "^3.0.2",
    "@types/d3-axis": "^3.0.1",
    "@types/d3-brush": "^3.0.1",
    "@types/d3-delaunay": "^6.0.0",
    "@types/d3-format": "^3.0.1",
    "@types/d3-scale": "^4.0.2",
    "@types/d3-selection": "^3.0.2",
    "@types/d3-shape": "^3.0.2",
    "@types/d3-time-format": "^4.0.0",
    "concurrently": "^7.0.0",
    "deepmerge": "^4.2.2",
    "documentation": "^13.2.5",
    "rollup": "^2.67.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-loader": "^9.2.6"
  }
}
